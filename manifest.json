{

	"manifest_version": 2,
	"name": "ImdbAddon",
	"version": "0.0.1",
  
	"description": "A browser addon that adds user defined links in Imdb",
  
	"content_scripts": [
	  {
		"matches": ["*://imdb.com/title/*"],
		"js": ["src/main.js"]
	  }
	],
	"options_ui": {
		"page": "src/options/options.html"
	},
	"permissions": ["storage", "tabs"],

	"browser_specific_settings": {
		"gecko": {
		  "id": "weeboaddon@waifu.moe"
		}
	  },
	  
	  "browser_action": {
		"default_popup": "/src/popup/popup.html",
		"browser_style": true
	  }
  }
  